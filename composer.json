{
    "name": "macpaw/behat-nelmio-describer",
    "type": "symfony-bundle",
    "description": "Bundle for adding sample responses behat test nelmio to api doc",
    "keywords": [
        "MacPaw",
        "symfony",
        "behat",
        "swagger",
        "api-doc",
        "nelmio",
        "symfony-bundle"
    ],
    "authors": [
        {
            "name": "IiiigorGG",
            "email": "roidloua@gmail.com",
            "homepage": "https://macpaw.com/",
            "role": "Software Engineer"
        },
        {
            "name": "Yozhef Hisem",
            "email": "hisemjo@gmail.com",
            "homepage": "https://macpaw.com/",
            "role": "Software Engineer"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "nelmio/api-doc-bundle": "^4.0",
        "myclabs/php-enum": "^1.8",
        "symfony/dependency-injection": "^4.0 || ^5.0 || ^6.0",
        "symfony/config": "^4.0 || ^5.0 || ^6.0",
        "symfony/routing": "^4.0 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "sensio/framework-extra-bundle": "^4.0 || ^5.0 || ^6.0",
        "symfony/console": "^4.0 || ^5.0 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "BehatNelmioDescriber\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BehatNelmioDescriber\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "composer-validate": "composer validate",
        "phpstan": "./vendor/bin/phpstan analyse -l max",
        "code-style": "./vendor/bin/phpcs",
        "code-style-fix": "./vendor/bin/phpcbf",
        "phpunit": "./vendor/bin/phpunit",
        "dev-checks": [
            "composer validate",
            "@phpstan",
            "@phpunit",
            "@code-style"
        ]
    }
}
